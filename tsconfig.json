{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "lib",
    "module": "commonjs",
    "declaration": true,
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": "."
  },
  "include": [
    "src/index.ts",
    "src/editor/types.ts"
  ],
  "exclude": [
    "__tests__"
  ]
}
